# Builder stage
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev  # ci for clean install
COPY . .

# Final stage
FROM node:20-alpine
RUN addgroup -g 1001 -S nodejs && adduser -S nodeapp -u 1001 -G nodejs
WORKDIR /app
COPY --from=builder /app /app
USER nodeapp
EXPOSE 3000
CMD ["node", "dist/index.js"]  # Adjust entrypoint if different